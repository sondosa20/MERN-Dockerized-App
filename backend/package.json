{
    "name": "first-mern-app-backend",
    "version": "1.0.0",
    "description": "Backend for First MERN App",
    "main": "server.js",
    "scripts": {
        "start": "node ./dist/server.js",
        "build": "swc src -d dist --strip-leading-paths",
        "build:ts": "tsc --project tsconfig.json",
        "dev": "nodemon --ext ts --exec node --inspect -r @swc-node/register src/server.ts"
    },
    "author": "sondosa",
    "dependencies": {
        "dotenv": "^16.4.5",
        "express": "^4.17.1",
        "mongoose": "^5.12.3",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1"
    },
    "devDependencies": {
        "@swc-node/register": "1.10.9",
        "@swc/cli": "0.5.2",
        "@swc/helpers": "^0.5.15",
        "@types/express": "5.0.0",
        "@types/node": "22",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.7",
        "nodemon": "3.1.9",
        "open-cli": "8.0.0",
        "typescript": "5.7.2"
    },
    "engines": {
        "node": ">=20"
    }
}